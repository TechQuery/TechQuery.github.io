{
  "name": "tech-query",
  "version": "2.1.0",
  "description": "Personal Web site of TechQuery focused on Web & JavaScript full-stack development",
  "author": "shiy2008@gmail.com",
  "private": true,
  "homepage": "https://tech-query.me/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TechQuery/TechQuery.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/TechQuery/TechQuery.github.io/issues"
  },
  "scripts": {
    "format": "prettier --write \"{,!(node_modules|.git|scaffolds|themes|public)/**/}*.{html,md,css,less,js,json,yml,yaml}\"",
    "build": "npm run format  &&  hexo clean  &&  hexo generate",
    "deploy": "npm run format  &&  hexo clean  &&  hexo deploy",
    "start": "hexo clean  &&  hexo server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "dependencies": {
    "hexo": "^3.8.0",
    "hexo-auto-category": "^0.2.0",
    "hexo-deployer-git": "^1.0.0",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-search": "^2.4.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-permalink-pinyin": "^1.0.0",
    "hexo-prism-plugin": "^2.3.0",
    "hexo-pwa": "^0.1.3",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-marked": "^0.3.2",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.3"
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "prettier": "^1.17.1"
  },
  "hexo": {
    "version": "3.8.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  }
}
